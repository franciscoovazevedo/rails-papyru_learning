<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag("icons/logo-web.png", :alt => "Papyru Learning") %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in CHANGE THINGS HERE -->
      <%= link_to '#', :class => 'navbar-wagon-link' do %>
        <span>Lessons</span>
      <% end %>
      <%= link_to '#', :class => 'navbar-wagon-link' do %>
        <span>Messages</span>
      <% end %>
      <%= link_to '#', :class => 'navbar-wagon-link' do %>
        <span>Help</span>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo.to_s == "" %>
            <%= image_tag current_user.photo , class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag("img_6387.jpg") %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <%= t(".profile", default: "Become a Teacher") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <%= t(".profile", default: "Edit Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <%= t(".profile", default: "Account Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

      <!-- Login link (when logged out) -->
      <%= link_to '#', :class => 'navbar-wagon-link' do %>
        <span>About</span>
      <% end %>
      <%= link_to '#', :class => 'navbar-wagon-link' do %>
        <span>Help</span>
      <% end %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-link", id: "navbar-login" %>
      <%= link_to t(".sign_in", default: "Signup"), new_user_session_path, class: "navbar-wagon-link", id: "navbar-signup" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
